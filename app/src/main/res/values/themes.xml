<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BorrowBook" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BorrowBook.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BorrowBook.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BorrowBook.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/text_mediumsmallest</item>
        <item name="android:textColor">@color/purple_500</item>

        <item name="enforceTextAppearance">false</item>
        <item name="android:padding">@dimen/no_size</item>
        <item name="android:insetTop">@dimen/no_size</item>
        <item name="android:insetBottom">@dimen/no_size</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>

        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button.TextButton</item>
    </style>
</resources>